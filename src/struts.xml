<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<include file="struts-default.xml"></include>
	<!--
	<constant name="struts.ui.theme" value="gfbtmpl" />
	<constant name="struts.ui.templateDir" value="template" />
	-->
	<package name="" namespace="/" extends="struts-default">
		<action name="">
			<result>/WEB-INF/index.jsp</result>
		</action>
		<action name="login">
			<result>/_ah/login</result>
		</action>
		<action name="logout">
			<result>/_ah/login</result>
		</action>
		<action name="home">
			<result>/WEB-INF/index.jsp</result>
		</action>
		<action name="family" class="it.mondovich.actions.FamilyAction">
			<result>/WEB-INF/family.jsp</result>
			<result name="error">/WEB-INF/family.jsp</result>
		</action>
		<action name="newPerson" method="newPerson" class="it.mondovich.actions.FamilyAction">
			<result>/WEB-INF/family.jsp</result>
		</action>
		<action name="editPerson" method="editPerson" class="it.mondovich.actions.FamilyAction">
			<result>/WEB-INF/family.jsp</result>
		</action>
		<action name="deletePerson" method="deletePerson" class="it.mondovich.actions.FamilyAction">
			<result>/WEB-INF/family.jsp</result>
			<result name="error">/WEB-INF/family.jsp</result>
		</action>
		<action name="bankaccount" class="it.mondovich.actions.BankAccountAction">
			<result>/WEB-INF/bankaccount.jsp</result>
			<result name="error">/WEB-INF/bankaccount.jsp</result>
		</action>
		<action name="newBankAccount" method="newBankAccount" class="it.mondovich.actions.BankAccountAction">
			<result>/WEB-INF/bankaccount.jsp</result>
			<result name="input">/WEB-INF/bankaccount.jsp</result>
		</action>
		<action name="addBankAccountOwner" method="addBankAccountOwner" class="it.mondovich.actions.BankAccountAction">
			<result>/WEB-INF/bankaccount.jsp</result>
		</action>
		<action name="editBankAccount" method="editBankAccount" class="it.mondovich.actions.BankAccountAction">
			<result>/WEB-INF/edit_bankaccount.jsp</result>
		</action>
		<action name="deleteBankAccount" method="deleteBankAccount" class="it.mondovich.actions.BankAccountAction">
			<result>/WEB-INF/bankaccount.jsp</result>
			<result name="error">/WEB-INF/bankaccount.jsp</result>
		</action>
		<action name="transactions" method="listTransactions" class="it.mondovich.actions.TransactionAction">
			<result>/WEB-INF/transactions.jsp</result>
		</action>
		<action name="reports" class="it.mondovich.actions.ReportAction">
			<result>/WEB-INF/reports.jsp</result>
		</action>
	</package>
</struts>
